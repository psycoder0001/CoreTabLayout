<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="50dp">

    <com.deepdroid.coretablayout.CoreTabLayout
        android:id="@+id/testCoreTabLayoutWith1Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <com.deepdroid.coretablayout.CoreTabLayout
        android:id="@+id/testCoreTabLayoutWith2Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

    <com.deepdroid.coretablayout.CoreTabLayout
        android:id="@+id/testCoreTabLayoutWith3Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

    <com.deepdroid.coretablayout.CoreTabLayout
        android:id="@+id/testCoreTabLayoutWith4Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

</LinearLayout>